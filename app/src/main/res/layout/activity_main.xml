<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/teama"
                android:textColor="@color/primary_text"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/ScoreTeamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:text="@string/_0"
                android:textColor="@color/secondary_text"
                android:textSize="32sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center_horizontal"
                android:onClick="AddThreeTeamA"
                android:padding="4dp"
                android:text="@string/_3"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center_horizontal"
                android:onClick="AddTwoTeamA"
                android:padding="4dp"
                android:text="@string/_2"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center_horizontal"
                android:onClick="FreeThrowTeamA"
                android:padding="4dp"
                android:text="@string/freeShot"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/Fouls"
                android:textColor="@color/primary_text"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/foulTeamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:text="@string/_0"
                android:textColor="@color/secondary_text"
                android:textSize="32sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@android:color/holo_orange_dark"
                android:gravity="center_horizontal"
                android:onClick="AddFoulTeamA"
                android:padding="4dp"
                android:text="@string/AddFoul"
                android:textAllCaps="false"
                android:textSize="24sp" />
        </LinearLayout>

        <View
            android:layout_width="3dp"
            android:layout_height="500dp"
            android:background="@color/divider"
            android:foregroundGravity="center"
            android:gravity="center"
            android:paddingTop="16dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/teamB"
                android:textColor="@color/primary_text"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/ScoreTeamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:text="@string/_0"
                android:textColor="@color/secondary_text"
                android:textSize="32sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center_horizontal"
                android:onClick="AddThreeTeamB"
                android:text="@string/_3"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center_horizontal"
                android:onClick="AddTwoTeamB"
                android:padding="4dp"
                android:text="@string/_2"
                android:textSize="24sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center_horizontal"
                android:onClick="FreeThrowTeamB"
                android:padding="4dp"
                android:text="@string/freeShot"
                android:textSize="24sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:padding="4dp"
                android:text="@string/FoulB"
                android:textColor="@color/primary_text"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/foulTeamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center_horizontal"
                android:text="@string/_0"
                android:textColor="@color/secondary_text"
                android:textSize="32sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@android:color/holo_orange_dark"
                android:gravity="center_horizontal"
                android:onClick="AddFoulTeamB"
                android:padding="4dp"
                android:text="@string/AddFoulB"
                android:textAllCaps="false"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@android:color/holo_orange_light"
        android:onClick="resetScore"
        android:padding="4dp"
        android:text="@string/reset" />
</RelativeLayout>